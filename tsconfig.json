{
  "compilerOptions": {
    "pretty": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "jsx": "preserve",
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "lib": ["es6", "dom"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "preserveSymlinks": true,
  }
}
